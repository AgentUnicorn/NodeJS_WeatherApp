    <input type="submit" value="Get Forecast">
</form>

<h3 class="pt-5">Your location: <strong>{{city}}</strong></h3>
{{#if forecast}}
<h2>
    <img src="{{iconurl}}" height="100px" weight="100px">
    
    <strong>
